<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>shopMonitor</servlet-name>
        <servlet-class>WEB.shopMonitor</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>shopMouse</servlet-name>
        <servlet-class>WEB.shopMouse</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>shopKeyboard</servlet-name>
        <servlet-class>WEB.shopKeyboard</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>shopHardDisk</servlet-name>
        <servlet-class>WEB.shopHardDisk</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>shopUSB</servlet-name>
        <servlet-class>WEB.shopUSB</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>shopMonitor</servlet-name>
        <url-pattern>/monitor</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>shopMouse</servlet-name>
        <url-pattern>/mouse</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>shopKeyboard</servlet-name>
        <url-pattern>/keyboard</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>shopHardDisk</servlet-name>
        <url-pattern>/hardDisk</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>shopUSB</servlet-name>
        <url-pattern>/usb</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
